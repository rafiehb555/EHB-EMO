# JPS Environment Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ehb_jps_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_URL=postgresql://postgres:your_password@localhost:5432/ehb_jps_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@ehb-jps.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ehb-jps-uploads

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX=ehb_jps_jobs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Development Tools
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Search Configuration
SEARCH_INDEX_NAME=jobs
SEARCH_BATCH_SIZE=100

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# Payment Configuration
PAYMENT_GATEWAY=stripe
CURRENCY=USD
SUBSCRIPTION_PLANS=basic,premium,enterprise

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
MIXPANEL_TOKEN=your_mixpanel_token

# Social Login
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Job Matching Algorithm
MATCHING_ALGORITHM_VERSION=1.0
SKILLS_WEIGHT=0.7
EXPERIENCE_WEIGHT=0.2
LOCATION_WEIGHT=0.1

# Email Templates
WELCOME_EMAIL_TEMPLATE=welcome
JOB_APPLICATION_EMAIL_TEMPLATE=job_application
INTERVIEW_INVITATION_TEMPLATE=interview_invitation
STATUS_UPDATE_TEMPLATE=status_update

# File Storage
STORAGE_PROVIDER=local
CDN_URL=https://cdn.ehb-jps.com

# API Documentation
API_DOCS_URL=http://localhost:3001/api-docs
SWAGGER_UI_URL=http://localhost:3001/swagger

# Development Server
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
ADMIN_PANEL_URL=http://localhost:3002

# Testing
TEST_DB_NAME=ehb_jps_test_db
TEST_DB_URL=postgresql://postgres:your_password@localhost:5432/ehb_jps_test_db

# Docker Configuration
DOCKER_IMAGE_NAME=ehb-jps
DOCKER_TAG=latest
DOCKER_REGISTRY=your_registry.com

# CI/CD
GITHUB_TOKEN=your_github_token
DEPLOYMENT_ENVIRONMENT=development
