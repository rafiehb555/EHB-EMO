# EMO Backend Environment Configuration

# Application Settings
NODE_ENV=development
PORT=4003

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/emo_dev
DB_NAME=emo_dev
DB_HOST=localhost
DB_PORT=27017
DB_USER=
DB_PASS=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:6001

# Logging
LOG_LEVEL=debug

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@emo.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# AI Configuration (OpenAI)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Blockchain Configuration
POLKADOT_ENDPOINT=wss://rpc.polkadot.io
MOONBEAM_ENDPOINT=https://rpc.api.moonbeam.network
BSC_ENDPOINT=https://bsc-dataseed.binance.org

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=emo-session-secret

# Development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true
